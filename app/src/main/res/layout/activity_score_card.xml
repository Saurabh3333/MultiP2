<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/b11"
    tools:context="com.fridaygmail.saurabh.multip.ScoreCard">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/result"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="40dp"
        android:id="@+id/score"
        android:textColor="#2095f2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Your score is: " />

    <Button
        android:text="facebook.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:background="#3b5998"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:id="@+id/facebook" />

    <Button
        android:text="twitter.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aced"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/twitter" />

    <Button
        android:text="netcamp.in"
        android:background="#d34836"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/netcamp" />

    <Button
        android:text="HOME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#76B900"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/netcamp"

        android:id="@+id/homeWeb" />
</LinearLayout>
